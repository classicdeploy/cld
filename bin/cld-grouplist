#!/bin/bash
HELP_DESC=$(cat << 'EOL'
Show list of groups
EOL
)
HELP_ARGS=$(cat << 'EOL'
$1                            First PATTERN filtering allowed groups
$2                            Second PATTERN filtering allowed groups
$3                            Third PATTERN filtering allowed groups
--json                        Json outout option
--beauty                      Using together with --json option to beautify json output
EOL
)
HELP_EXAMPLES=$(cat << 'EOL'
cld-grouplist
cld-grouplist --json
EOL
)

source /var/cld/bin/include/cldfuncs

for i in ${CLDOPTS}
do
case $i in
-j|-json|--json) JSON=1                            ;;
-b|-beauty|--beauty) JSON_BEAUTY=1                 ;;
-*)                                                ;;
*) let ii++; declare ARG$ii=${i}                   ;;
esac
done

[ "$JSON" == "1" ] && JSONARG='--json'
[ "$JSON_BEAUTY" == "1" -a "$FROM" == "API" ] && JSON_BEAUTY_ARG='| jq . -C'
[ "$JSON_BEAUTY" == "1" -a "$FROM" != "API" ] && JSON_BEAUTY_ARG='| jq .'

CLOUDS_USER_ALLOWED --grouplist