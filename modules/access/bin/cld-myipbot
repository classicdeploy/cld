#!/bin/bash
HELP_DESC=$(cat << 'EOL'
Add or update private IP of user to access list
Tool oriented to BOT and API interfaces
Arguments filling automatically by using /myip command at Messenger chat with bot
If IP address is not detected - return api link with temporary token to add IP auto detected just by click
To add an IP address to access list via CLI - use cld-enableip
EOL
)
HELP_ARGS=$(cat << 'EOL'
$1                       Messenger user id
$2                       Messenger user name
$3                       IP address
EOL
)
HELP_EXAMPLES=$(cat << 'EOL'
cld-myip #BOT
cld-myip 1.2.3.4 #BOT
EOL
)
HELP_ONLY="BOT"
source /var/cld/bin/include/cldfuncs
source /var/cld/modules/access/bin/include/accessfuncs
[ "${FROM}" != "BOT" ] && cldhelp
init-load-constants TELEGRAM_BOT_TOKEN\|1234567890:AAEzBFqFii-uirfyG3PnygA0DAvJvRH7UzB CLD_DOMAIN\|cldapi.yourdomain.com
if  ! echo ${3} | egrep -q "^([0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3})|(([a-f0-9:]+:+)+[a-f0-9]+)$"; then 
    export TOKEN="$(passwordgen 35)"
    echo "${TOKEN}_${1}_${2}_`TZ=Europe/Moscow date +%F-%H-%M`" >> /var/cld/modules/access/data/myip_tokens
    echo "To add your IP address to the white list, please visit: 
https://${CLD_DOMAIN}/api/all/myipinit?token=${TOKEN}"
exit 0
else
    if grep -q ${1} /var/cld/modules/access/data/myips; then
        sed -i "s#.*${1}.*#${3}_${1}_${2}_`TZ=Europe/Moscow date +%F-%H-%M`#g" /var/cld/modules/access/data/myips
        echo "private IP ${3} successfully updated for user ${2}"
    else
        echo "${3}_${1}_${2}_`date +%F-%H-%M`" >> /var/cld/modules/access/data/myips
        echo "private IP ${3} successfully added to access list for user ${2}"
    fi
    updateaccesslists
fi
